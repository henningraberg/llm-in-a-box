#chat-container{
    width: 100%;
    height: 100%;
    border: ascii green;
}

#chat-list-container{
    width: 30%;
    dock: left;
    background: #161312 100%;
    margin-left: 1;
    margin-top: 1;
    margin-bottom: 1;
    margin-right: 1;
}

#init-new-chat-button{
    width: 100%;
}

#chat-list{
    width: 100%;
    scrollbar-background: #343a40 100%;
    scrollbar-color: green;
    scrollbar-background-hover: #343a40 100%;
    scrollbar-color-active: green;
    scrollbar-color-hover: green;
}

#chat-view-container {
    dock: right;
    width: 70%;
    background: #161312 100%;
    margin-right: 1;
    margin-top: 1;
    margin-bottom: 1;
    margin-left: 1;
}

#chat-view-header{
}

#chat-history{
    scrollbar-background: black;
    height: 90%;
    margin-bottom: 1;
    overflow-y: scroll;
    border: heavy black;
}

#input-box {
    dock: bottom;
    height: 20%;
    width: 170%;
    margin-bottom: 1;
    margin-right: 1;
}
#input-buttons-box{
   height: 100%;
}

#send-button {
    height: 50%;
}

#abort-button {
    height: 50%;
}
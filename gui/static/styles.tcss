#chat-container{
    width: 100%;
    height: 100%;
    border: ascii green;
}

#chat-list-container{
    width: 30%;
    dock: left;
    background: #161312 100%;
    margin-left: 1;
    margin-top: 1;
    margin-bottom: 1;
    margin-right: 1;
}

#init-new-chat-button{
    width: 100%;
}

#chat-list{
    scrollbar-background: #161312;
    scrollbar-color: #242424;
    scrollbar-background-hover: #161312;
    scrollbar-color-active: #242424;
    scrollbar-color-hover: #242424;
    border: heavy black;
    margin-bottom: 1;
}

#chat-view-container {
    dock: right;
    width: 70%;
    background: #161312 100%;
    margin-right: 1;
    margin-top: 1;
    margin-bottom: 1;
    margin-left: 1;
}

#chat-history-box{
    height: 90%;
    overflow-y: scroll;
    border: heavy black;
    scrollbar-background: #161312;
    scrollbar-color: #242424;
    scrollbar-background-hover: #161312;
    scrollbar-color-active: #242424;
    scrollbar-color-hover: #242424;
}

#input-box {
    dock: bottom;
    height: 20%;
    width: 170%;
    margin-bottom: 1;
    margin-right: 1;
}
#input-buttons-box{
    align-vertical: middle;
}